APP_NAME="Zin Fashion"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Localization
APP_LOCALE=de
APP_FALLBACK_LOCALE=de
APP_TIMEZONE=Europe/Berlin

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=zin_fashion_multilingual
DB_USERNAME=root
DB_PASSWORD=

# Drivers
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (optional, for better performance)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="info@zinfashion.de"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (optional, for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (optional, for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Payment Gateways
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_MODE=sandbox

# E-commerce Settings
SHOP_NAME="Zin Fashion"
SHOP_EMAIL="info@zinfashion.de"
SHOP_PHONE="+49 123 456789"
SHOP_ADDRESS="Musterstra√üe 123, 12345 Musterstadt"
SHOP_CURRENCY=EUR
SHOP_TAX_RATE=19
SHOP_TAX_INCLUDED=true
ORDER_PREFIX="ZF-"

# GDPR Settings
GDPR_DATA_CONTROLLER="Zin Fashion GmbH"
GDPR_CONTACT_EMAIL="datenschutz@zinfashion.de"
GDPR_DPO_EMAIL="dpo@zinfashion.de"
GDPR_DELETION_DAYS=30

# Security
ADMIN_IP_WHITELIST=
RATE_LIMIT_PER_MINUTE=60
FORCE_HTTPS=false

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=
GOOGLE_TAG_MANAGER_ID=

# Social Media (optional)
FACEBOOK_URL=
INSTAGRAM_URL=
TWITTER_URL=
YOUTUBE_URL=

# Image Processing
IMAGE_DRIVER=gd
MAX_IMAGE_SIZE=5120
THUMBNAIL_WIDTH=300
MEDIUM_WIDTH=600
LARGE_WIDTH=1200

# Performance
DEBUGBAR_ENABLED=false
QUERY_DETECTOR_ENABLED=false
CACHE_PRODUCTS=true
CACHE_DURATION=3600

# Backup
BACKUP_NOTIFICATION_EMAIL="${SHOP_EMAIL}"
BACKUP_DISK=local

# Monitoring (optional)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1